{% if course %}
  <div id="permanent-contents" class="course-content">
    <div class="busy"></div>
    <ul id="js-course-tree"
        class="modules list-group"
        data-course="{{ course | to_json | replace: '"', '&quot;' | strip_newlines }}"
        data-enrollment="{{ enrollment | to_json | replace: '"', '&quot;'| strip_newlines }}"
        data-course_content="{{ content | to_json | replace: '"', '&quot;'| strip_newlines }}"
        data-user-type="{{ current_user.type }}"
        data-lesson-actions="{{ lesson_actions }}"
        data-download-action="{{ download_action }}"
        data-current-lesson-id="{{ current_lesson_id }}"
        data-translation-release-at="{{ 'lesson.release_at' | t }}"
        data-translation-release-after="{{ 'lesson.release_after' | t }}"
        data-translation-course_content-views="{{ 'product.course_content.views' | t }}"
        data-api-key="{{ current_api_credentials }}">
    </ul>
  </div>
{% endif %}
