<div class="product-topics">
  {% for topic in product.topics %}
    <div class="topic panel panel-default">
      <div class="panel-heading">
        <h2 class="title">{{ topic.title }}</h2>
      </div>
      <div class="panel-body">
        <p class="description">{{ topic.description }}</p>
      </div>
    </div>
  {% endfor %}
</div>
