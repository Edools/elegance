<header id="school-header" class="navbar navbar-default navbar-static-top" {% if current_user %} data-user='{"id": {{current_user.id}}, "name": "{{current_user.first_name + ' ' + current_user.last_name}}", "cpf": "{{current_user.cpf}}", "email": "{{current_user.email}}", "avatar_url": "{{current_user.cover_image_url}}"}' {% endif %}>
  <div class="container">
    <div id="main-navbar"  aria-label="Menu Principal" class="navbar-header row">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-menu">
        {{ 'navbar.open_navigation' | t }}
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand {% if settings.view.general.navbar.logo.size > 0 %}navbar-brand-img{% endif %}" href="/">
        {% if settings.view.general.navbar.logo.size > 0 %}
          {% image, src: settings.view.general.navbar.logo %}
        {% else %}
          {{ settings.view.general.navbar.title }}
        {% endif %}
      </a>
    </div>

    <div class="collapse navbar-collapse" id="header-menu">
      <ul class="nav navbar-nav navbar-right">
          {% if current_user == nil or current_user.type == 'Student' %}
            {% assign express_checkout = current_school | has_feature: 'express_checkout' %}
            {% unless express_checkout %}
              <li aria-label="Carrinho de Compras">
                <a href="/cart">
                  <i class="icon-basket"></i>
                  <span>{{ 'navbar.cart' | t }}</span>
                </a>
              </li>
            {% endunless %}
          {% else %}
            <li>
              <a href="{{ current_user | sso_admin_path: current_api_key }}">
                <i class="icon-settings"></i>
                <span>{{ 'navbar.admin' | t }}</span>
              </a>
            </li>
          {% endif %}


          {% if current_user %}
          <li>
            {% assign new_forum = current_school | has_feature: 'new_forum' %}
            <a href="{% if new_forum %}/school/forums{% else %}/forums{% endif %}">
              <i class="fas fa-comment"></i>
              <span>{{ 'navbar.forum' | t }}</span>
            </a>
          </li>

          {% if current_user.type == 'Student' %}
            <li>
              <a href="/enrollments">
                <i class="fas fa-book"></i>
                <span>{{ 'navbar.my_courses' | t }}</span>
              </a>
            </li>
          {% elsif current_user.type == 'Collaborator' %}
            <li>
              <a href="/courses">
                <i class="fas fa-book"></i>
                <span>{{ 'navbar.my_courses' | t }}</span>
              </a>
            </li>
          {% endif %}



          {% include 'navbar-user-links', mobile_class: true %}

          <li aria-label="Opções de Usuário" class="dropdown">
            <a aria-label="Opções de Usuário" href="#" class="dropdown-toggle user-options" data-toggle="dropdown">
              <i class="icon icon-arrow-down"></i>
              <span class="avatar">
                {% assign avatar_alt = current_user | fullname %}
                {% image, src: current_user.cover_image_url, alt: avatar_alt, class: 'avatar-img' %}
              </span>
            </a>

            <ul class="dropdown-menu">
              {% include 'navbar-user-links' %}
            </ul>
          </li>

        {% else %}
         <li><a class="nav-home" href="/#about-us">Quem Somos</a></li>
          <li><a class="nav-home" href="/products"> Nossos Cursos</a></li>
          <li><a class="nav-home" href="/users/sign_up">Cadastre-se Grátis</a></li>
          <li><a class="nav-home" href="/users/sign_in">Acesse sua conta</a></li>
        {% endif %}
      </ul>
    </div>
  </div>
</header>



