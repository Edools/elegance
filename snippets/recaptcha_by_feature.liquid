{% if feature %}
    {% assign has_recaptcha_by_feature = current_school | has_feature: feature %}
    {% if has_recaptcha_by_feature %}
        {% assign id = 10 | random %}

        {% if redirect_url %}
            <input type="hidden" name="recaptcha_redirect_url" value="{{ redirect_url }}">
        {% endif %}

        <div id="js-recaptcha-{{ id }}"
            class="recaptcha js-recaptcha"
            data-sitekey="{{ recaptcha_site_key }}"
            data-button-selector="{{ button_selector }}"
            data-disable-button="{{ disable_button }}">
        </div>
    {% endif %}
{% endif %}
