<header id="header">
  <div class="container">
    <div class="row">
      <div class="col-xs-7 col-sm-7 col-md-6 col-md-offset-1 custom-col">
        <div class="responsive-img">
          {% if settings.view.general.navbar.logo.size > 0 %}
          <img src="{{ settings.view.general.navbar.logo }}" alt="Logo School">
          {% else %}
          <h4>{{ settings.view.general.navbar.title }}</h4>
          {% endif %}
        </div>
      </div>
      <div class="col-xs-5 col-sm-5 col-md-4 custom-col">
        <img src="{{ 'inline-secure-purchase.png' | asset_url }}" alt="Inline Secure Purchage Image" width="160"
          height="21">
      </div>
    </div>
  </div>
</header>

<style>
  #header {
    display: flex;
    justify-content: center;
    position: fixed;
    height: 55px;
    width: 100%;
    background-color: #FFFFFF;
    z-index: 100;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.05);
  }

  #header a {
    text-decoration: none;
  }

  .custom-col {
    display: flex;
    align-items: center;
    height: 55px;
  }

  .responsive-img {
    width: 180px;
  }

  .responsive-img img {
    width: 80%;
    height: auto;
  }

  .custom-col:last-child {
    justify-content: flex-end;
  }

  @media only screen and (max-width: 420px) {
    .responsive-img {
      width: 140px;
    }
  }

  @media only screen and (max-width: 767px) {
    .container {
      width: 100%;
      margin-right: 0;
      margin-left: 0;
    }
  }
</style>
