<div class="home-categories">
  {% assign all_categories = current_school | get_categories %}
  {% for c in settings.view.home.categories | order_by: 'order' %}
    {% assign current_category = nil %}
    {% for category in all_categories %}
      {% if category.slug == c.slug %}
        {% assign current_category = category %}
      {% endif %}
    {% endfor %}

    {% assign category_products = current_school | get_products_by_category_slug: c.slug, 4 %}

    <div class="home-category">
      <div class="container">
        <h3>{{ current_category.title }} Order:{{ c.order }}</h3>
      </div>

      <div class="category-products">
        {% include 'product/list', products: category_products, gateway: gateway %}
      </div>
    </div>
  {% endfor %}

</div>
