{% for i in (1..5) %}
  {% assign half_value = i | minus: value %}

  {% if i <= value %}
    {% include 'ui/stars/complete-star', size: size %}
  {% elsif half_value < 1 %}
    {% include 'ui/stars/half-star', size: size %}
  {% else %}
    {% include 'ui/stars/empty-star', size: size %}
  {% endif %}
{% endfor %}
