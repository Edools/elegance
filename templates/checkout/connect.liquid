<div class="checkout-page checkout-connect-page page">
  <div class="container">
    {% include "checkout/return", return_url: "/cart" %}

    <div class="row">
      {% include "checkout/title-box" %}
      <div class="col-md-7 cart-wizard">
        <div class="wizard">

          {% if order.kind != 'free' %}
            {% include "checkout/wizard-header", step: 1 %}
          {% endif %}

          <div class="wizard-content">
            <!-- <div class="alert alert-warning">
              <h4 class="note-title">{{ 'general.attention' | t }}</h4>
              <span>{{ 'checkout.connect.signin_again' | t }}</span>
            </div> -->
            <div class="row">
              <div class="page-signup-alt col-md-6">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <div class="title">{{ 'checkout.connect.create_account' | t }}</div>
                  </div>
                  <div class="panel-body">
                    <!-- Form -->
                    {% form 'register' %}
                    {% if form.errors and last_used_form == 'register' %}
                      <div class="alert alert-danger">{{ form.errors | default_errors }}</div>
                    {% endif %}

                    <div class="form-group">
                      <input type="text" value="{{ user.first_name }}" autofocus="true" name="user[first_name]"
                             class="form-control input-md" placeholder="{{ 'register.first_name' | t }}" required>
                    </div>

                    <div class="form-group">
                      <input type="email" value="{{ user.email }}" name="user[email]" class="form-control input-md"
                             placeholder="{{ 'register.email' | t }}" required>
                    </div>

                    <div class="form-group">
                      <input type="text"  name="user[phone]" class="form-control input-lg"
                             placeholder="{{ 'checkout.complete.phone' | t }}" required>
                    </div>
                    
                    {% assign has_cep_service = current_school | has_feature: 'cep_service' %}
                    <div class="form-group">
                      <input type="text" name="user[cpf]" ui-mask="999.999.999-99" id="user-cpf" class="form-control input-lg"
                                  {% if has_cpf_validation %}data-validate-cpf="true"{% endif %}
                             placeholder="{{ 'checkout.complete.cpf' | t }}" required>
                    </div>
                
                    <div class="form-group">
                        <input type="text" name="user[address_attributes][street]" class="form-control input-lg"
                                placeholder="{{ 'checkout.complete.address_street' | t }}" required>
                    </div>
                
                    <div class="form-group">
                        <input type="text" name="user[address_attributes][number]" class="form-control input-lg"
                                placeholder="{{ 'checkout.complete.address_number' | t }}" required>
                    </div>
                
                    <div class="form-group">
                        <input type="text" name="user[address_attributes][complement]" class="form-control input-lg"
                                placeholder="{{ 'checkout.complete.address_complement' | t }}" required>
                    </div>
                
                    <div class="form-group">
                        <input type="text" name="user[address_attributes][district]" class="form-control input-lg"
                                placeholder="{{ 'checkout.complete.address_district' | t }}" required>
                    </div>
                
                    <div class="form-group">
                        <input type="text" name="user[address_attributes][city]" class="form-control input-lg"
                                placeholder="{{ 'checkout.complete.address_city' | t }}" required>
                    </div>
                
                    <div class="form-group">
                      {% include "select-address", selected_state: address.state %}
                    </div>
                    
                    <div class="form-group">
                      <input type="hidden" id="user[born_at]" name="user[born_at]"><div class="input-group date">
                        <input type="text" class="form-control datepicker" placeholder="Data de nascimento" required>
                        <div class="input-group-addon">
                          <i class="icon-calendar"></i>
                        </div>
                      </div>
                    </div>
                
                    <div class="form-group">
                        <input type="text" name="user[address_attributes][zip_code]" class="form-control input-lg" id="user-cep"
                              {% if has_cep_service %}data-enable-cep-service="true"{% endif %}
                                placeholder="{{ 'checkout.complete.address_zip_code' | t }}" required>
                    </div>
                    
                    <div class="form-group signin-password">
                      <input type="password" name="user[password]" class="form-control input-md"
                             placeholder="{{ 'register.password' | t }}" required>
                    </div>

                    <div class="form-group signin-password">
                      <input type="password" name="user[password_confirmation]" class="form-control input-md"
                             placeholder="{{ 'register.password_confirmation' | t }}" required>
                    </div>
                      
                    

                    <div class="text-right">
                      <input type="submit" value="{{ 'register.create_account' | t }}"
                             class="btn btn-primary btn-create-account">
                    </div>
                    {% endform %}
                    <!-- / Form -->
                  </div>
                </div>
              </div>

              <div class="page-signin-alt col-md-6">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <div class="title">
                      {{ 'checkout.connect.signin_account' | t }}
                    </div>
                  </div>
                  <div class="panel-body">
                    <!-- Form -->
                    {% form 'login' %}
                    {% if form.errors and last_used_form == 'login' %}
                      <div class="alert alert-danger">{{ form.errors | default_errors }}</div>
                    {% endif %}

                    <div class="form-group">
                      <input type="email" autofocus="true" name="user[email]" class="form-control input-md"
                             placeholder="{{ 'login.email' | t }}" required>
                    </div>

                    <div class="form-group signin-password">
                      <input type="password" name="user[password]" class="form-control input-md"
                             placeholder="{{ 'login.password' | t }}" required>
                    </div>

                    <div class="row">
                      <div class="col-xs-8 text-left">
                        <small>{{ 'Esqueceu a senha?' | reset_password_link : 'forgot' }}</small>
                      </div>
                      <div class="col-xs-4 text-right">
                        <input type="submit" value="{{ 'login.enter' | t }}" class="btn btn-primary btn-login-form">
                      </div>
                    </div>

                    {% endform %}
                    <!-- / Form -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <br>
      </div>
      <div class="col-md-5 cart-sidebar">
        <div class="panel panel-default">
          <div class="panel-body">
            {% include "checkout/security-box" %}
            {% include "checkout/totals-box", closed_borders: true %}
            {% include "checkout/payment-methods-box", closed_borders: true %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
