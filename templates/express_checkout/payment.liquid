<script>
  $(document).ready(() => {

    $.validate({
      modules: 'brazil'
    });

    const input = document.getElementById('card-number');

    if(input) payform.cardNumberInput(input);

    $('#card-expiration').mask('00/0000');
    $('#usercpf').mask('000.000.000-00');

    $('[data-toggle="popover"]').popover({
      placement: function (context, source) {
        setTimeout(() => this.$tip.css('left', '-=40'), 0);
        return 'top';
      },
    });

    $('#card-number').keyup(event => {
      $('#visa').css({ opacity: 0.5 });
      $('#mastercard').css({ opacity: 0.5 });
      $('#amex').css({ opacity: 0.5 });
      $('#dinersclub').css({ opacity: 0.5 });

      const cardType = payform.parseCardType(event.target.value);

      $('#card-cvc').mask(cardType === 'amex' ? '0000' : '000');

      $(`#${cardType}`).css({ opacity: 1 });
    });

    $('a[data-toggle="tab"]').on('shown.bs.tab', event => {
      const target = $(event.target).attr("href");
      $('#address-container').fadeIn().css({ display: target === '#boleto' ? 'block' : 'none' });
    });

    $('.container-spacing input').keyup(event => $(`#${event.target.id}`).validate());

    $("#btn-finalize-purchase").click(() => {
      const activeTab = $('#tab-payment-methods li.active a').attr('href');

      const currentFormIdentifier = `#${$(activeTab).find('form').attr('id')}`;

      const studentBlur = $('#student-form input').blur();

      if (studentBlur.hasClass("error")) {
        $("html").animate({ scrollTop: studentBlur.offset().top - 200 }, 1500);
        return
      }

      const studentDataArray = $('#student-form').serializeArray();

      let studentAddressArray = [];
      if (currentFormIdentifier === '#boleto-form') {
        const studentAddressBlur = $('#student-address-form input').blur();

        if (studentAddressBlur.hasClass("error")) {
          $("html").animate({ scrollTop: studentAddressBlur.offset().top - 200 }, 1500);
          return
        }
        studentAddressArray = $('#student-address-form').serializeArray();
      }

      const checkboxTermsOfServiceBlur = $('#checkbox-terms-of-service').blur();

      if (checkboxTermsOfServiceBlur.hasClass("error")) {
        $("html").animate({ scrollTop: checkboxTermsOfServiceBlur.offset().top - 500 }, 1000);
        return
      }

      [...studentDataArray, ...studentAddressArray].forEach(({ name, value }) => {
        if (name === 'user[full_name]') {
          const { firstName, lastName } = splitString(value);

          $('<input>').attr({ type: 'hidden', name: 'user[first_name]', value: firstName }).appendTo(currentFormIdentifier);
          $('<input>').attr({ type: 'hidden', name: 'user[last_name]', value: lastName }).appendTo(currentFormIdentifier);
        } else
          $('<input>').attr({ type: 'hidden', name, value }).appendTo(currentFormIdentifier);

      });

      $(currentFormIdentifier).submit();

    });

  });

  function splitString(name){
    const EMPTY_STRING = ' ';
    const splitted = name ? name.split(EMPTY_STRING) : EMPTY_STRING.split(EMPTY_STRING);
    const firstName = splitted.shift();
    const lastName = splitted ? splitted.join(EMPTY_STRING) : EMPTY_STRING;

    return { firstName, lastName }
  }
</script>

