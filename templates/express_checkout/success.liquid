<div class="checkout-success-page page">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-11 col-md-offset-1 cart-wizard">
        {% include "checkout/return" %}
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-5 col-sm-push-7 col-md-4 col-md-offset-0 cart-sidebar">
        <h4 class="title-form">{{ 'express_checkout.title_purchase_summary' | t }}</h4>
        {% include "express_checkout/product-box" %}
        {% include "express_checkout/coupon-box" %}
        {% include "express_checkout/totals-box" %}
      </div>

      <div class="col-xs-12 col-sm-7 col-sm-pull-5 col-md-5 col-md-offset-2 cart-wizard">

        <div class="form-container text-center">

          <div id="icon-congratulations"></div>

          <!-- {% if payment and payment.kind == 'boleto' %}
          <div>

            <h3 id="thank-you-for-buying-text">{{ 'checkout.success.boleto_title' | t }}</h3>

            <p>{{ 'checkout.success.boleto_description' | t }}</p>

            <div class="buttons-padding">
              <a href="{{ payment.link }}" class="btn btn-light btn-success-options btn-block js-open-on-load"
                target="_blank">

              </a>
            </div>

          </div>
          {% endif %} -->

          {% if current_user == nil %}

          <h2 class="thank-you-for-buying-text">{{ 'checkout.success.thanks_purchase_title' | t }}</h2>

          <p> {{ 'checkout.success.thanks_purchase_description_unlogged_user' | t }}</p>

          <div class="buttons-padding">
            <a href="https://gmail.com" target="_blank" class="btn btn-light btn-success-options btn-block">
              <i class="icon-credit-card"></i>
              {{ 'checkout.success.access_button_content' | t: platform: 'Gmail' }}</a>
            <br>
            <a href="https://hotmail.com" target="_blank" class="btn btn-light btn-success-options btn-block">
              <i class="icon-credit-card"></i>
              {{ 'checkout.success.access_button_content' | t: platform: 'Hotmail' }}</a>
          </div>
          {% else %}

          <h3 class="thank-you-for-buying-text">{{ 'checkout.success.thanks_purchase_title' | t }}</h3>

          <p> {{ 'checkout.success.thanks_purchase_description_logged_user' | t }}</p>

          <div class="buttons-padding">
            <a href="/enrollments" class='btn btn-primary btn-lg'>{{ 'checkout.success.go_to_enrollments' | t }}</a>
          </div>
          {% endif %}
        </div>

        {% include "express_checkout/payment-processing-message-box" %}
      </div>
    </div>
  </div>
</div>

<style>
  .checkout-success-page {
    font-size: 14px;
  }

  .checkout-success-page .btn {
    margin-top: 0;
  }

  .form-container {
    background: #FFFFFF;
    box-shadow: 0px 5px 10px rgba(211, 211, 211, 0.198044);
    border-radius: 2px;
    padding: 24px 31px;
    margin: 22px 0;
  }

  #icon-congratulations {
    background: url('data:image/svg+xml;base64,') no-repeat 50%;
    margin-top: 20px;
    width: 100%;
    height: 72px;
  }

  .thank-you-for-buying-text {
    margin-top: 20px;
    font-weight: bold;
    padding: 0 40px;
    line-height: 115%;
    color: #34B469;
  }

  .buttons-padding {
    margin: 38px 0;
    padding: 0 40px;
  }

  .buttons-padding .btn-success-options {
    padding: calc(.5rem - 4px) 0;
    border: 2px solid #2cc3cc;
    background-color: white;
    box-shadow: 0 2px 4px 0 rgba(44, 195, 204, 0.2);
    color: #2cc3cc;
    padding: 10px;
  }


  .title-form {
    font-weight: bold;
    line-height: 130%;
    text-transform: uppercase;
  }
</style>
