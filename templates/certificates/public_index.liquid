<div class="certificates-page page">
  <div class="container public-index">
    <h2>{{ 'certificates.title' | t }}</h2>
    <h5>{{ 'certificates.subtitle' | t }}</h5>

    <form id="certificate-search" accept-charset="UTF-8" method="get" action="/certificates/public" data-turbolinks-scroll="false">
      <div class="input-group input-group-lg">
        <span class="input-group-addon no-background"><i class="icon-magnifier"></i></span>
        <input type="text" name="token" class="form-control" placeholder="{{ 'certificates.filter_by_token' | t }}"
               value="{{ current_search }}">
        <span class="input-group-btn">
          <input type="submit" value="{{ 'general.search' | t }}" class="btn btn-default">
        </span>
      </div>
    </form>

    <br>

    {% if certificate %}
      <div id="certificate-iframe" class="responsive-iframe">
        <iframe src="{{ certificate.s3_file_url }}#view=fit"></iframe>
      </div>
    {% elsif current_search %}
      {% include 'certificates/not-found' %}
    {% endif %}

    <br>
  </div>
</div>
