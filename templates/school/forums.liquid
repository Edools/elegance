<div class="forums-page page">
  <div class="forum-panel">
    <div class="container whitebg course-dashboard-content">
      <h2>{{ 'forums.forums' | t }}</h2>
      <div class="forums-body">
        <form accept-charset="UTF-8" method="get" action="/school/forums" data-turbolinks-scroll="false">
          <div class="input-group input-group-lg">
            <span class="input-group-addon no-background"><i class="icon-magnifier"></i></span>
            <input type="text" name="title" class="form-control" placeholder="{{ 'forums.filter_by_title' | t }}"
                   value="{{ current_search.title }}">
              <span class="input-group-btn">
                <input type="submit" value="{{ 'general.search' | t }}" class="btn btn-default">
              </span>
          </div>
        </form>
      </div>

      <br>

      <div collapse="collapsed" class="forums list-group">
        {% paginate forums by 10 sort { order: :asc } %}
          {% if forums.total_count == 0 and current_search.size == 0 %}
            <div class="alert alert-info text-center">
              {{ 'forums.empty' | t }}
            </div>
          {% else %}
            {% for forum in forums %}
              <article id="forum-{{ forum.id }}" class="forum list-group-item clearfix">
                <div class="forum-content clearfix">
                  <a class="list-group-item-heading title" href="{{ forum | forum_path }}">{{ forum.title }}</a>
                  <p class="list-group-item-text" clamp="3">{{ forum.description }}</p>
                </div>
                <div id="sections_count" class="section-meta pull-right">
                  <b>
                    {{ 'forums.child_forum_sections_count' | t: count: forum.sections_count }}
                  </b>
                </div>
              </article>
            {% endfor %}
          {% endif %}

          {% include 'pagination_links' %}
        {% endpaginate %}
      </div>
    </div>
  </div>
</div>
