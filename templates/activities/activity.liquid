<div id="activity">
  {% case  activity.type %}
  {% when 'Quiz' %}
    {% quiz activity: activity, lesson: lesson,
      attempts_remaining: attempts_remaining, answer: answer,
      lesson_progress: lesson_progress %}
  {% when 'FileUpload' %}
    {% include 'activities/file_upload' %}
  {% when 'CollaborativeDiscussion' %}
    {% include 'activities/collaborative_discussion' %}
  {% endcase %}
</div>
